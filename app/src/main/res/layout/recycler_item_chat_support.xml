<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/MaterialNavigationDrawerTheme.Light.DarkActionBar"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:id="@+id/lay_user_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_user_name__"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/support_chat_user"
        android:text="User"
        android:textStyle="bold"
        android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_chat_hour"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Hour"
            android:textColor="@color/textGray"
            android:gravity="right"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_user_message__"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textDark"
        android:text="User Message"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        android:paddingRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/backgroundDark"
        android:layout_marginBottom="3dp"/>

</LinearLayout>