<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card_"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_opt_bckg">

        <LinearLayout
            android:id="@+id/card_detail_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_prod_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_normal_plus"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/_spinner_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:prompt="@string/products_prompt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_prod_total_price"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_normal_plus"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/position_element"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/text_info_this"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/info__" />

                <ImageView
                    android:id="@+id/text_delete_this"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cancel_r" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>