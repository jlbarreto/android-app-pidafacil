<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
 <LinearLayout
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_car_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/amex"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txt_d_prod_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/textDark"
                android:textStyle="bold"
                android:gravity="left"/>
            <TextView
                android:id="@+id/txt_d_prod_unitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/textDark"
                android:textStyle="bold"/>
            </LinearLayout>

        <TextView
            android:id="@+id/txt_d_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textDark"
            android:text=""/>

        <TextView
            android:id="@+id/txt_s_ingr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes:"
            android:textColor="@color/textDark"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_d_ingr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textDark"
            />

        <TextView
            android:id="@+id/txt_s_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textDark"
            android:text="Condiciones:"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_d_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/textDark"
            />

         <TextView
             android:id="@+id/txt_s_comment"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/textDark"
             android:text="Comentarios:"
             android:layout_marginTop="10dp"
             android:textStyle="bold"/>

         <TextView
            android:id="@+id/txt_d_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/textDark"
            />

    </LinearLayout>
 </LinearLayout>
</ScrollView>
