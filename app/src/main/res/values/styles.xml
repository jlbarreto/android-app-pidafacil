<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="colorControlNormal">#fafafa</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="MySectionTheme">
        <item name="sectionColorIcon">@color/primaryColorDark</item>
        <item name="sectionColorText">@color/primaryColorDark</item>
        <item name="sectionColorNotification">#616161</item>
        <item name="sectionBackgroundColorPressed">#616161</item>
        <item name="sectionBackgroundColorSelected">#e0e0e0</item>
        <item name="sectionBackgroundColor">#000000FF</item>
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="sectionStyle">@style/MySectionTheme</item>
        <item name="singleAccount">true</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="colorControlNormal">#fafafa</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

</resources>